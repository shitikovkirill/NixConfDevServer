<ul class="list">
    {% for item in menu %}
        <li class="{{item.classes | join(' ')}}">
            <a href="{{item.get_link}}">{{item.title}}</a>
            {% if item.get_children %}
                <ul class="sub-menu">
                    {% for child in item.get_children %}
                        <li class="nav-drop-item"><a href="{{child.get_link}}">{{child.title}}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>